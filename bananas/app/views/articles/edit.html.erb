<h3>Edit Article</h3>
<% if @errors %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @errors.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for [@category, @article] do |f| %>
<div>
  <%= f.label :title %>
</div>
<div>
  <%= f.text_field :title %>
</div>
<div>
  <%=f.fields_for :categories do |category|%>
  <%= category.label :category %><br>
  <%=category.text_field :name, list: 'name'%>
  <datalist id='name'>
    <% Category.all.each do |category| %>
    <option value="<%=category.name%>"></option>
    <%end%>
  </datalist>
</div>
<%end%>

<div>
  <%= f.label :content %>
</div>
<div>
  <%= f.cktext_area :content, rows: 10 %>
</div>
<div>
  <%= f.submit({class: "btn btn-success"})%>
</div>
<% end %>


